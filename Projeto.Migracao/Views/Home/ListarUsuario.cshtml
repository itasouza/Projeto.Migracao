@model IEnumerable<Projeto.Migracao.Models.Usuario>

@{
    ViewData["Title"] = "ListarUsuario";
}

    <div class="container">

        <br />
        <br />
        @if (TempData["confirmacao"] != null)
        {

            <div class="alert alert-success alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>@TempData["confirmacao"]</strong>
            </div>

        }

        <p id="btnControle">
            <a asp-action="NovoUsuario" asp-controller="Home" class="btn btn btn-success">Adicionar</a>
        </p>



        <table id="dados" class="table table-hover  table-striped display responsive nowrap table-sm " cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Login</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.iid</td>
                        <td>@item.login</td>
                        <td class="text-right">
                            <a class="btn btn-primary" href="/home/EditarUsuario/@item.iid">Editar</a>|
                            <a class="btn btn-danger" href="/home/Deletar/@item.iid">Deletar</a>|
                        </td>

                    </tr>
                }
            </tbody>
        </table>



    </div>

@section Scripts {
    <script>

        $(document).ready(function () {

             $('#dados').DataTable({
                "orderMulti": false,
                "paging": true,
                "info":false,
                 "language": {
                    "lengthMenu": "Visualizando _MENU_ Registros por página",
                    "zeroRecords": "Não existe registros para visualização",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No records available",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado",
                    "sSearch": "Pesquisar",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                }
            });

        });

    </script>



}

