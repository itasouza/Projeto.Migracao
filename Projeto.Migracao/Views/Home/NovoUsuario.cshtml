@model Projeto.Migracao.Models.Usuario


@{
    ViewData["Title"] = "NovoUsuario";
}




<br />
    <div class="container">
        <!--início do formulário-->
        <form role="form" asp-controller="Home" asp-action="Salvar" method="post">
            <input type="hidden" asp-for="iid" value="0" />

            <!--informação básica-->
            <fieldset>

                <legend class="text-center">Cadastro de Usuário</legend>

                <div class="row col-sm-6">


                    <div class="form-group col-sm-12">
                        <label id="" for="nome">Login da Aplicação*</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </div>
                            <input type="text" name="nome" asp-for="login" class="form-control"  tabindex="1"  id="nome" placeholder="Adicionar nome" autocomplete="off">
                        </div>
                        <small class="form-text text-muted"> <span class="text-danger" asp-validation-for="login"></span> </small>
                    </div>



                    <div class="form-group col-sm-12">
                        <label id="" for="nome">Senha da Aplicação*</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </div>
                            <input type="text" name="nome" asp-for="senha" class="form-control"  tabindex="1"  id="senha" placeholder="Adicionar senha" autocomplete="off">
                        </div>
                        <small class="form-text text-muted"> <span class="text-danger" asp-validation-for="senha"></span> </small>
                    </div>


                    <div class="form-group col-sm-12">
                        <input type="submit" class="btn btn-primary" name="enviar" id="enviar" value="Enviar">
                        <a asp-action="ListarUsuario" asp-controller="Home" class="btn btn-warning">Retornar</a>
                    </div>

                </div>
                <!--row nome e apelido-->

            </fieldset>


        </form>
        <!--fim do formulário-->

    </div>


